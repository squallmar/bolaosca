<div class="page-header">
  <%= content_tag :h3, @contato.request ? "SOLICITAÇÃO DE CADASTRO" : "CONTATO" , :class => "title"  %>
</div>
<%= form_for @contato, :method => :post do |f| %>

  <%= f.hidden_field :request, :value=> @contato.request %>
  <div>
    <%= f.label :nome %><br />
    <%= f.text_field :nome,:value => user_signed_in? ? current_user.nome : '' ,:size=>40, :readonly => user_signed_in? %>
    <%= error_tag @contato, :nome %>
  </div>

  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email,:value => user_signed_in? ? current_user.email : '',:size=>40,:readonly => user_signed_in? %>
    <%= error_tag @contato, :email %>
  </div>

  <div>
    <%= f.label :assunto %><br />
    <%= f.text_field :assunto, :value => (@contato.request ? "SOLICITAÇÃO DE CADASTRO" : "CONTATO"),:readonly=>@contato.request,:size=>40 %>
    <%= error_tag @contato, :assunto %>
  </div>

   <div>
    <%= f.label :texto %><br />
    <%= f.text_area :texto, :cols=>80 , :rows=>15, :placeholder => (@contato.request ? "SOLICITAÇÃO DE CADASTRO - Por favor, identifique-se" : "Não deixe de nos contar sua opinião") %>
  </div>

  <%= f.submit "Enviar Email", :nome => "Enviar Email", :class=>'btn btn-primary' %>


<% end -%>