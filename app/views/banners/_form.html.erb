<%= form_for @banner, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
      <%= error_tag @banner, :nome %>
    </div>
  </div>


  <div class="control-group" style="margin-left:5%">
    <% if @banner.image.present? -%>
      <%= image_tag(@banner.image.url, :class=>'user_photo')%>
    <% end -%>
<br/><br/>
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
    <%= f.file_field :image, :style =>'width:300px' %>
    <%= error_tag @banner, :image %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :link,:value => @banner.link.present? ? @banner.link : 'http://', :class => 'text_field' %>
      <%= error_tag @banner, :link %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text, :class => 'text_field' %>
            <%= error_tag @banner, :text %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tipo, :class => 'control-label' %>
    <div class="controls">
      <%= f.radio_button :tipo, 'Apoio', :checked => true %>
      <%= label :tipo_apoio, 'Apoio', :"data-intro" => "O quadro de Banners do patrocinador terá espaço apenas para um banner e fica no topo da página." %>
      <%= f.radio_button :tipo, 'Patrocinio' %>
      <%= label :tipo_patrocionio, 'Patrocinio', :"data-intro" => "O quadro de Banners de apoio terá espaço para 3 banners e fica abaixo do de patrocínio." %>
    </div>
  </div>



  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                banners_path, :class => 'btn' %>
  </div>
<% end %>
