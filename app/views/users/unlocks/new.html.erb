<h2>Reenviar instruções para desbloqueio de conta</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %>
  <%= error_tag resource, :email %>
  </div>

  <div><%= f.submit "Reenviar instruções" %></div>
<% end %>

<%= render "users/shared/links" %>