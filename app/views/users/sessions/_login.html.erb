<div id="servidor">
  <%= form_for("user", :url => new_user_session_path) do |f| %>
    <%= f.text_field :email, :placeholder => "EMAIL" %>
    <%= f.password_field :password, :placeholder => "SENHA" %>
    <br/>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me ,"Lembrar de mim", :style => "display:inline" %><br/>

    <%= f.submit 'Entrar', :class=> 'btn clear btn-success' %>
    <%= link_to "Esqueceu a senha?", new_user_password_path('user'),:class=> 'btn clear btn-mini' %>
  <% end -%>
</div>
