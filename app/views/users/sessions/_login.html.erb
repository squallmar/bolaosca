<div id="servidor" class="space-y-4">
  <%= form_for(User.new, as: :user, url: session_path(:user), 
               html: { class: "space-y-4" }, 
               data: { turbo: false }) do |f| %>
    
    <div class="field">
      <%= f.email_field :email, 
            placeholder: "Email",
            class: "w-full px-3 py-2 border rounded-md",
            autocomplete: "email",
            required: true %>
    </div>

    <div class="field">
      <%= f.password_field :password, 
            placeholder: "Senha",
            class: "w-full px-3 py-2 border rounded-md",
            autocomplete: "current-password",
            required: true %>
    </div>

    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
        <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-900" %>
      </div>

      <div class="text-sm">
        <%= link_to "Esqueceu a senha?", 
              new_user_password_path(:user), 
              class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>

    <div>
      <%= f.submit "Entrar", 
            class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>