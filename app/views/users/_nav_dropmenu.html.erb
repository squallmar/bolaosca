<ul class="space-y-1">
  <li>
    <%= link_to edit_registration_path, 
          class: "block px-4 py-2 hover:bg-gray-100 transition-colors duration-150",
          "aria-label": "Alterar dados pessoais" do %>
      <span class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        Alterar Dados Pessoais
      </span>
    <% end %>
  </li>

  <li>
    <%= link_to users_alterar_senha_path, 
          class: "block px-4 py-2 hover:bg-gray-100 transition-colors duration-150",
          data: { 
            confirm: "Você efetuará logout do aplicativo para requisitar uma alteração de senha, para isso precisará do atual email da sua conta! Deseja continuar?" 
          },
          "aria-label": "Alterar senha" do %>
      <span class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        Alterar Senha
      </span>
    <% end %>
  </li>

  <li>
    <%= link_to users_alterar_avatar_path, 
          class: "block px-4 py-2 hover:bg-gray-100 transition-colors duration-150",
          "aria-label": "Alterar avatar" do %>
      <span class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Alterar Avatar
      </span>
    <% end %>
  </li>

  <li>
    <%= link_to preferencias_path, 
          class: "block px-4 py-2 hover:bg-gray-100 transition-colors duration-150",
          "aria-label": "Editar preferências" do %>
      <span class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        Preferências
      </span>
    <% end %>
  </li>

  <li class="border-t border-gray-200 mt-1 pt-1">
    <%= button_to destroy_user_session_path,
          method: :delete,
          class: "w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600 transition-colors duration-150",
          form_class: "inline",
          "aria-label": "Sair do sistema" do %>
      <span class="flex items-center pointer-on-hover">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        Sair
      </span>
    <% end %>
  </li>
</ul>