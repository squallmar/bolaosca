  <%= content_tag :h3, "Alterar Senha", :class => "title"  %>
<br/>
<%= content_tag :i, current_user.apelido || current_user.email %>
<hr>
<%= form_for(current_user, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

  <div>
    <%= f.label :current_password, 'Senha' %> <i>(Precisamos da senha atual para realizar as alterações)</i><br />
    <%= f.password_field :current_password %>
    <%= error_tag current_user, :current_password %>

  </div>

    <div>
      <%= f.label :password, 'Nova senha' %><br />
      <%= f.password_field :password, :autocomplete => "off" %>
      <%= error_tag current_user, :password %>
    </div>

    <div>
      <%= f.label :password_confirmation, 'Repita a nova senha' %><br />
      <%= f.password_field :password_confirmation %>
      <%= error_tag current_user, :password_confirmation %>
  </div>
<br/>

  <div><%= link_to "Voltar", edit_registration_path(current_user) ,:class => 'btn' %> | <%= f.submit "Atualizar Senha" , :class => 'btn btn-primary' %> </div>
<% end %>
