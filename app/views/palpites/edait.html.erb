<div class="mb-6">
  <h1 class="page-header text-2xl font-semibold text-gray-800">
    Palpites dos resultados dos Jogos da rodada <%= @rodada.numero %>
  </h1>
</div>

<div class="overflow-x-auto">
  <table class="table table-striped min-w-full bg-white shadow-md rounded-lg">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time(CASA)</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Placar(CASA)</th>
        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Vs.</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Placar(FORA)</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time(FORA)</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <%= form_for @jogos, url: bolao_rodada_palpites_path, html: { method: :put } do |f| %>
        <% for @jogo in @jogos %>
          <%= render "form_line", locals: { f: f } %>
        <% end %>
        <tr>
          <td colspan="5" class="px-4 py-4 whitespace-nowrap text-center">
            <%= submit_tag "Salvar Apostas", class: "btn btn-primary bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>